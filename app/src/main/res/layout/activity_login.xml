<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activity.LoginActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#52000000"/>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="44sp"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        app:fontFamily="@font/calligraffitti"/>

    <TextView
        android:id="@+id/txt_subtitle"
        android:layout_below="@id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bilgi Üniversitesi Öğrenci Klüpleri"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:textStyle="bold"
        app:fontFamily="@font/varela"/>

    <TextView
        android:layout_below="@id/txt_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:text="Daha önceden üye olduysanız ve ya ye olmak istiyorsanız\nGoogle hesabınızla oturum açarak içeriklere erişebilirsiniz.\nŞimdiden keyifli kullanımlar."
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        app:fontFamily="@font/varela"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="#DF5B5E"
        android:gravity="center"
        android:padding="15dp"
        android:text="   Google+ ile giriş yap "
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold"
        app:fontFamily="@font/varela" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="#68FFFFFF"/>

    <TextView
        android:id="@+id/txt_admin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Yönetici Girişi"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:fontFamily="@font/varela"/>


</RelativeLayout>