<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activity.AdminActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#E4E4E4"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:text="Hoşgeldin,\nGDG"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                app:fontFamily="@font/varela" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_below="@id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/tv_input_1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="50dp"
               android:layout_marginTop="22dp"
               android:layout_marginEnd="30dp"
               android:fontFamily="@font/varela"
               android:hint="Başlık (Etkinlik/İçerik)"
               android:textColorHint="@color/colorBlack"
               app:boxStrokeColor="@color/colorAccent"
               app:errorEnabled="true"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginLeft="50dp"
               android:layout_marginRight="30dp">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/edt_title"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="-4dp"
                   android:layout_marginEnd="-4dp"
                   android:fontFamily="@font/varela"
                   android:inputType="textPersonName"
                   android:paddingStart="11dp"
                   android:paddingEnd="6dp"
                   android:singleLine="true"
                   android:textColor="#646464"
                   android:textIsSelectable="false"
                   android:textSize="14sp"
                   app:backgroundTint="#d3d3d3"
                   app:hintAnimationEnabled="true"
                   app:layout_constraintTop_toTopOf="parent"
                   android:paddingLeft="11dp"
                   android:paddingRight="6dp" />

           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/tv_input_2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/tv_input_1"
               android:layout_marginStart="50dp"
               android:layout_marginTop="12dp"
               android:layout_marginEnd="30dp"
               android:fontFamily="@font/varela"
               android:hint="Kısa açıklama (Etkinlik/İçerik)"
               android:textColorHint="@color/colorBlack"
               app:boxStrokeColor="@color/colorAccent"
               app:errorEnabled="true"
               android:layout_marginLeft="50dp"
               android:layout_marginRight="30dp">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/edt_subtitle"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="-4dp"
                   android:layout_marginEnd="-4dp"
                   android:fontFamily="@font/varela"
                   android:inputType="textPersonName"
                   android:paddingStart="11dp"
                   android:paddingEnd="6dp"
                   android:singleLine="true"
                   android:textColor="#646464"
                   android:textIsSelectable="false"
                   android:textSize="14sp"
                   app:backgroundTint="#d3d3d3"
                   app:hintAnimationEnabled="true"
                   android:paddingLeft="11dp"
                   android:paddingRight="6dp" />

           </com.google.android.material.textfield.TextInputLayout>


           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/tv_input_3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/tv_input_2"
               android:layout_marginStart="50dp"
               android:layout_marginTop="12dp"
               android:layout_marginEnd="30dp"
               android:fontFamily="@font/varela"
               android:hint="Uzun açıklama (Etkinlik/İçerik)"
               android:textColorHint="@color/colorBlack"
               app:boxStrokeColor="@color/colorAccent"
               app:errorEnabled="true"
               android:layout_marginLeft="50dp"
               android:layout_marginRight="30dp">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/edt_dest"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="-4dp"
                   android:layout_marginEnd="-4dp"
                   android:fontFamily="@font/varela"
                   android:inputType="textPersonName"
                   android:paddingStart="11dp"
                   android:paddingEnd="6dp"
                   android:singleLine="true"
                   android:textColor="#646464"
                   android:textIsSelectable="false"
                   android:textSize="14sp"
                   app:backgroundTint="#d3d3d3"
                   app:hintAnimationEnabled="true"
                   android:paddingLeft="11dp"
                   android:paddingRight="6dp" />

           </com.google.android.material.textfield.TextInputLayout>


           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/tv_input_4"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/tv_input_3"
               android:layout_marginStart="50dp"
               android:layout_marginTop="12dp"
               android:layout_marginEnd="30dp"
               android:fontFamily="@font/varela"
               android:hint="Tarih (Etkinlik/İçerik)"
               android:textColorHint="@color/colorBlack"
               app:boxStrokeColor="@color/colorAccent"
               app:errorEnabled="true"
               android:layout_marginLeft="50dp"
               android:layout_marginRight="30dp">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/edt_date"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="-4dp"
                   android:layout_marginEnd="-4dp"
                   android:fontFamily="@font/varela"
                   android:inputType="text"
                   android:paddingStart="11dp"
                   android:paddingEnd="6dp"
                   android:singleLine="true"
                   android:textColor="#646464"
                   android:textIsSelectable="false"
                   android:textSize="14sp"
                   app:backgroundTint="#d3d3d3"
                   app:hintAnimationEnabled="true"
                   android:paddingLeft="11dp"
                   android:paddingRight="6dp" />

           </com.google.android.material.textfield.TextInputLayout>

           <TextView
               android:id="@+id/edt_image"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/tv_input_4"
               android:layout_marginStart="57dp"
               android:layout_marginTop="28dp"
               android:layout_marginEnd="30dp"
               android:fontFamily="@font/varela"
               android:hint="Paylaşıma ait resim seçiniz >"
               android:textSize="14sp"
               android:textColorHint="@color/colorBlack"
               android:layout_marginLeft="57dp"
               android:layout_marginRight="30dp" />

           <View
               android:id="@+id/views"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_marginTop="12dp"
               android:layout_marginLeft="50dp"
               android:layout_marginRight="30dp"
               android:background="#d3d3d3"
               android:layout_below="@+id/edt_image"/>

           <ImageView
               android:visibility="gone"
               android:id="@+id/img"
               android:layout_width="match_parent"
               android:layout_height="180dp"
               android:layout_marginLeft="30dp"
               android:layout_marginRight="30dp"
               android:layout_below="@id/views"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="20dp"
               android:layout_marginBottom="20dp" />

           <TextView
               android:id="@+id/save"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:fontFamily="@font/varela"
               android:text="Paylaş"
               android:textStyle="bold"
               android:textColor="@color/colorWhite"
               android:background="@color/colorAccent"
               android:padding="10dp"
               android:layout_centerHorizontal="true"
               android:layout_below="@id/img"
               android:layout_marginTop="50dp"
               android:layout_marginBottom="30dp"/>


       </RelativeLayout>

    </ScrollView>


</RelativeLayout>