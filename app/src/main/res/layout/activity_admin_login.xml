<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activity.AdminLogin">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="uClub "
        android:textSize="44sp"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        app:fontFamily="@font/calligraffitti"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_input_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/txt_title"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/varela"
        android:hint="Kullanıcı adınız"
        android:textColorHint="@color/colorBlack"
        app:boxStrokeColor="@color/colorAccent"
        app:errorEnabled="true"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-4dp"
            android:layout_marginEnd="-4dp"
            android:fontFamily="@font/varela"
            android:inputType="textPersonName|textCapCharacters"
            android:paddingStart="11dp"
            android:paddingEnd="6dp"
            android:singleLine="true"
            android:textColor="#646464"
            android:textIsSelectable="false"
            android:textSize="14sp"
            app:backgroundTint="#d3d3d3"
            app:hintAnimationEnabled="true"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingLeft="11dp"
            android:paddingRight="6dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_input_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_input_1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/varela"
        android:hint="Şifreniz"
        android:textColorHint="@color/colorBlack"
        app:boxStrokeColor="@color/colorAccent"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-4dp"
            android:layout_marginEnd="-4dp"
            android:fontFamily="@font/varela"
            android:inputType="textPassword"
            android:paddingStart="11dp"
            android:paddingEnd="6dp"
            android:singleLine="true"
            android:textColor="#646464"
            android:textIsSelectable="false"
            android:textSize="14sp"
            app:backgroundTint="#d3d3d3"
            app:hintAnimationEnabled="true"
            android:paddingLeft="11dp"
            android:paddingRight="6dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/varela"
        android:text="Giriş Yap"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_input_2"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"/>


</RelativeLayout>